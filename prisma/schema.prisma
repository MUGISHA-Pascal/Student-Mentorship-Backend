generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  dob       String
  gender    String // 'male', 'female', 'other'
  password  String
  role      ROLE   @default(STUDENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum ROLE {
  STUDENT
  MENTOR
  ADMIN
  EMPLOYER
  FAMILY
}

model OTP {
  id        Int      @id @default(autoincrement())
  otp       String
  secret    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  email     String

  @@map("otps")
}

model ConsultancyRequest {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  career    String
  createdAt DateTime @default(now())
}

model EmailSubscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}
